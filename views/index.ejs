<!DOCTYPE html>
 
<html>
 
<head>
 
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.0/css/bulma.min.css">
<script src = "https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<link href='https://fonts.googleapis.com/css?family=Libre Barcode 39' rel='stylesheet'>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>

</head>
 
<body>
    <div class="container is-fluid">
        <div class="notification is-primary">
            Customer Queue Management
        </div>
        <% var data %>
        <table class="table">
            <thead>
                <tr>
                  <th><abbr title="Number">No</abbr></th>
                  <th>Customer Name</th>
                  <th> <title="Address">Address</th>
                  <th> <title="Date">Date</th>
                  <th> <title="Description">Description</th>
                  <th> <title="Insurance">Insurance</th>
                  <th> <title="Insurance">Method</th>
    
                </tr>
              </thead>
    
              <tbody>
                <% queue.forEach((d,i) => { %>
              <tr >
                <th> <%= i + 1 %></th>
                <td><a> <%= d.customer_name %> </a> 
                </td>
                <td><a> <%= d.address %></a></td>
                <td><a> <%= d.registration_date %> </a></td>
                <td><a> <%= d.request_description %></a></td>
                <td><%= d.insurance_id.insurance_name %> </td>
                <td> 
                    <form action="/page/barcode" method="post">
                        <button class="button is-danger is-small" name="queue" value="<%= d.queue_code %>" type="submit">Print Queue</button>
                    </form>
                </td>
              </tr>
                <% }) %>
            </tbody>
          </table>
    
      </div>
    
</body>
</html>